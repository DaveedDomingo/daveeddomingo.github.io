---
layout: default
---
{% unless site.data.resume %}
  <div class="post">
    <header class="post-header">
      <h1 class="post-title">
        {{ page.title }}
      </h1>
      {% if page.description %}
        <p class="post-description">{{ page.description }}</p>
      {% endif %}
    </header>

    <!-- Add pdf viewer of CV -->
    <article class="post-content CV clearfix">
      <object data={{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }} type="application/pdf" width="100%" height="800px">
      <embed src={{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }} />
          <p>This browser does not support PDFs. Please download the PDF to view it: <a href={{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}>Download PDF</a>.</p>
      &lt;/embed&gt;
      </object>
    </article>

  </div>
{% else %}
  <div class="post">
